{
    "version": 2,
    "builds": [
        {
            "src": "ideology_analyzer.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/ideology_analyzer.py"
        }
    ]
} 